---
import Container from "./Container.astro";
import navConfig from "../../configs/navMenu.json"
---
<footer class="mt-16 pb-10">
	<Container>
		<div class="flex flex-col items-center justify-between md:gap-6 sm:flex-row">
			<div class="flex gap-6 text-sm font-medium">
				{
					navConfig.footerNav.map((page) => {
					  return (
						  <a
							href={page.url}
							class="relative block px-3 py-2 transition hover:text-primary"
							aria-current="page"
						  >
							{page.title}
						  </a>
					  );
					})
				  }
			</div>
			<p class="text-sm text-zinc-400 dark:text-zinc-500">
				&copy; {new Date().getFullYear()} Amit K. All rights reserved.
			</p>
		</div>
	</Container>
</footer>